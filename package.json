{
  "name": "video-formats-converter",
  "version": "1.0.0",
  "description": "Video format and aspect ratio converter supporting 16:9, 9:16, 1:1, 4:5 ratios and MP4, MOV, MKV, AVI, WebM formats",
  "main": "electron/main.js",
  "bin": {
    "vconvert": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "kill": "node scripts/kill-port.js",
    "preserver": "node scripts/kill-port.js",
    "server": "node src/server.js",
    "predev": "node scripts/kill-port.js",
    "dev": "node src/server.js",
    "preelectron": "node scripts/kill-port.js",
    "electron": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "test": "node test/test.js"
  },
  "build": {
    "appId": "com.videoconvert.app",
    "productName": "VideoConvert",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "public/**/*",
      "src/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico",
      "publisherName": "cyberos"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "video",
    "converter",
    "aspect-ratio",
    "ffmpeg",
    "mp4",
    "mov",
    "mkv",
    "avi",
    "webm"
  ],
  "author": "cyberos",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "ora": "^5.4.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
